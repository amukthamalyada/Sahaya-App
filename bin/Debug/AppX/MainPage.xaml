<Page
    x:Class="Sahaya.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Sahaya"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{StaticResource DefaultTextForegroundThemeBrush}">
        <Image HorizontalAlignment="Left" Height="150" Margin="37,26,0,0" VerticalAlignment="Top" Width="176"
               Source="images/sahaya.png" Stretch="Fill"/>
        <TextBlock x:Name="mc" HorizontalAlignment="Left" Margin="249,154,0,0" TextWrapping="Wrap" Text="Helping Environment and Human" VerticalAlignment="Top" Height="34" Width="503" Foreground="#FF4169D3" FontSize="30" FontStyle="Italic"/>
        <TextBlock x:Name="txtblck2" HorizontalAlignment="Left" Margin="320,653,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="105" Width="740" Foreground="#FF0E0D0D" FontSize="20" FontStyle="Italic" Text="Sahaya helps its users to develop a green healthier environment by communicating with their respected forest departments. It also plays vital role in reducing deforestration and building a pollution free City."/>

        <Button x:ConnectionId='1' x:Name="green" Content="Go Green" HorizontalAlignment="Left" Margin="0,610,0,0" VerticalAlignment="Top" Width="162" Height="40" Foreground="#FF0C0A0A"  FontSize="24" Style="{StaticResource TextButtonStyle}"                      />

        <FlipView x:Name="TheFlipView" Margin="0,193,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="670" Height="400">
            <FlipView.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </FlipView.ItemsPanel>
            <Image Source="images/tree.png" Stretch="UniformToFill"  />
            <Image Stretch="UniformToFill" Source="images/main1.png" />
            <Image Stretch="UniformToFill" Source="images/tree1.png" />
            <Image Stretch="UniformToFill" Source="images/main2.png" />
            <Image Source="images/tree3.png" Stretch="Fill" />
            <Image Stretch="UniformToFill" Source="images/main3.png" />
            <Image Source="images/tree2.png" Stretch="UniformToFill"  />
            <Image Source="images/help1.png" Stretch="Fill"  />


        </FlipView>
        <Button x:ConnectionId='2' x:Name="problems" Content="Problems" HorizontalAlignment="Left" Margin="1201,610,0,0" VerticalAlignment="Top" Width="165" Height="40"  Foreground="#FF0C0A0A"  FontSize="24" Style="{StaticResource TextButtonStyle}"                          />


        <FlipView x:Name="TheFlipView1" Margin="694,193,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="670" Height="400">
            <FlipView.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </FlipView.ItemsPanel>
            <Image Source="images/main5.png" Stretch="Fill"  />
            <Image Source="images/help.png" Stretch="UniformToFill"  />
            <Image Source="images/help3.png" Stretch="UniformToFill"  />
            <Image Source="images/help2.png" Stretch="UniformToFill"  />
            <Image Source="images/help4.png" Stretch="Fill"  />
            <Image Source="images/help7.png" Stretch="Fill"  />
            <Image Source="images/help8.png" Stretch="Fill"  />
            <Image Source="images/help5.png" Stretch="UniformToFill"  />
            <Image Source="images/help6.png" Stretch="UniformToFill"  />
        </FlipView>

    </Grid>
</Page>

